doctype html
html

  head
    meta(charset='utf-8')
    link(href='../public/css/home.css')
    link(rel='stylesheet', href='../public/css/home.css')
    link(rel='stylesheet', href='../public/css/navbar.css')
    link(rel="icon", href="../public/img/logo.png")
    link(rel='stylesheet',href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')

    block head
        title Home
  body
    include nav_bar.pug

    // Side menu
    if user
        include side_bar.pug

    
    //Notification in the Navbar
    include notifications.pug
block main
    main#main
    .container
        include flash_messages.pug
        form#submit-form
          h4
            i.fas.fa-pencil-alt
            |  Write your thoughts
          br
          textarea#textarea(name='textarea')
          ul
            li
              button.waves-effect.waves-light.btn(onclick='sendpost()', type='button', name='button') Post
            li
              button#refreshbtn.waves-effect.waves-light.btn(type='button')
                i.fas.fa-ban
                |  Cancel
        #post

        each post in posts
            .user-container(id=`${post._id}`)
                .usercard2
                    img(style='', src='../public/img/lopez.jpg')
                    h2
                        a(href='') Nicky Smith
                    ul.hover_icons
                        li
                            a(href='/messages')
                                i.fas.fa-envelope
                .post-user
                    .post-text
                        span.close(title='delete post', onclick=`delete_post('${post._id}')`) Ã—
                        .post-text2
                            p #{post.post}
                            br
                    hr
                    .post-list
                        ul
                            li
                                a(href='')
                                    i.far.fa-heart(style='color: red;')
                                |  (34)
                            li
                                a(href='')
                                    i.far.fa-comment
                                |  (3)
                            li
                                small.date
                                    i.far.fa-calendar
                                    |  #{post.date}



block script
    script(src='https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js')
    script(src='../public/js/home.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js')
